### Google OAuth configuration
# Obtenha suas credenciais em: https://console.cloud.google.com/apis/credentials
# CONFIGURE NO RENDER: Coloque os valores reais no painel do Render (Environment Variables)
GOOGLE_CLIENT_ID=(SET_IN_RENDER_UI)
GOOGLE_CLIENT_SECRET=(SET_IN_RENDER_UI)

# URL de redirect - atualize com sua URL de produção no Render
GOOGLE_REDIRECT_URI=https://seu-gerador.onrender.com/api/slides/oauth/callback

# Infra geral
PORT=5173
NODE_ENV=production

# Google Slides / Drive - Configure IDs reais no Render
GOOGLE_TEMPLATE_ODIN_ID=(SET_IN_RENDER_UI)
GOOGLE_TEMPLATE_OD_VT_ID=(SET_IN_RENDER_UI)
GOOGLE_TEMPLATE_OD_DROP_ID=(SET_IN_RENDER_UI)
GOOGLE_TEMPLATE_OD_PACK_ID=(SET_IN_RENDER_UI)
GOOGLE_TEMPLATE_OD_FULL_ID=(SET_IN_RENDER_UI)

# Pastas do Google Drive
GOOGLE_PRESENTATIONS_FOLDER_ID=(SET_IN_RENDER_UI)
GOOGLE_DRIVE_ASSETS_FOLDER_ID=(SET_IN_RENDER_UI)
GOOGLE_SHARE_PRESENTATIONS=true

# Configurações do Aplicativo
APP_NAME=OD Drive - Gerador de Orçamentos
APP_VERSION=1.0.0

# Paths (Render usa filesystem temporário)
STORAGE_PATH=./data/proposals
EXPORTS_PATH=./tmp/exports
UPLOADS_PATH=./tmp/uploads

