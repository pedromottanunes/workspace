  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node --watch backend/server.js",
    "secret-scan": "node scripts/secret-scan.cjs",
    "create-admin": "node -r dotenv/config scripts/create-admin-user.js",
    "cap:sync": "npx cap sync",
    "cap:sync:android": "npx cap sync android",
    "cap:sync:ios": "npx cap sync ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:run:android": "npx cap run android -l --external",
    "cap:doctor": "npx cap doctor",
    "mobile:driver": "echo 'Certifique-se que index.html redireciona para driver-mobile.html' && npm run cap:sync:android",
    "mobile:graphic": "echo 'Certifique-se que index.html redireciona para graphic-mobile.html' && npm run cap:sync:android",
    "test-mongo": "node scripts/test-mongo-connection.js",
    "test-mongo:interactive": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-test-mongo.ps1",
    "prepare": "node -e \"if(process.env.CI||process.env.RENDER){process.exit(0)};require('child_process').execSync('husky',{stdio:'inherit'})\""
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
